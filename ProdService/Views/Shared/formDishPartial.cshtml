                            <button type="button" class="btn btn-primary btnBackToList" data-prop="dishCarts" data-listName="Список блюд" data-bs-dismiss="modal">К списку блюд</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
