<div class="modal fade" id="adddishCarts" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Добавление / Редактирование блюда</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="adddishCartsform" action="/api/dishCarts">
                    <div class="message-container"></div>
                    <div class="my-form-container">
                        <div class="dishAddContainer">
